{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "$mock/*":["./__mockData/*"],
      "$assets/*":["./public/assets/*"],
      "$global_style/*":["./styles/*"],
      "$core":["./_Core/index.ts"],
      "$components": ["./_Shared/index.ts"],
      "$interface/*":["./_Interfaces/*"],
      "$features":["./_Features/index.ts"],
      "$pages": ["./_Pages/index.ts"],
      "$utils":["./_Utilities/index.ts"],
      "$firebase":["./_Core/FireBase"]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
